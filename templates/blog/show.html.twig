{% extends 'base.html.twig' %}


{% block body %}
    <article class="p-2">
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}
            dans la catégorie {{ article.category.title }}
        </div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <p>{{ article.content }}</p>
        </div>
    </article>

    <section id="commentaire">
        {% for comment in article.comments %}
            <div class="comment">
                <div class="row">
                    <div class="col-3">
                        {{ comment.author }} (<small>{{ comment.createdAt | date('d/m/Y') }}</small>)
                    </div>
                    <div class="col">
                        {{ comment.content }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}